<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BorrowDeskripsiBuku"
    tools:layout_editor_absoluteY="81dp">

    <ImageView
        android:id="@+id/imagehead"
        android:layout_width="384dp"
        android:layout_height="50dp"
        android:background="#10C7B5"
        android:contentDescription="@string/backgroundhead" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="18dp"
        android:text="@string/Borrow"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="8dp"
        tools:text="Borrow" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:context=".BorrowLetterAgree">

        <Button
            android:id="@+id/idSetuju"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="85dp"
            android:layout_marginEnd="62dp"
            android:background="@color/colorPrimaryDark"
            android:text="SETUJU"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <Button
            android:id="@+id/idBatalkan"
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/idSetuju"
            android:layout_marginStart="52dp"
            android:background="@color/colorPrimaryDark"
            android:text="BATALKAN"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="80dp"
            android:layout_marginTop="86dp"
            android:gravity="center"
            android:text="Letter of Agreement"
            android:textColor="#ffffff"
            tools:text="Letter of Agreement" />

        <LinearLayout
            android:id="@+id/imageView9"
            android:layout_width="332dp"
            android:layout_height="284dp"
            android:layout_alignEnd="@+id/idSetuju"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="-40dp"
            android:layout_marginTop="69dp"
            app:srcCompat="@color/colorPrimary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:background="#10C7B5" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="299dp"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="Bersama surat ini merupakan persetujuan antara pihak pemberi pinjaman buku dan pihak yang meminjam." />
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="63dp"
        app:srcCompat="@drawable/line"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="438dp" />

    <ImageButton
        android:id="@+id/idBuLend"
        android:layout_width="37dp"
        android:layout_height="39dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="60dp"
        app:srcCompat="@drawable/bulend2" />

    <ImageButton
        android:id="@+id/idBuProfil"
        android:layout_width="36dp"
        android:layout_height="44dp"
        android:layout_alignTop="@+id/idBuLend"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/buprofil2" />

    <ImageView
        android:id="@+id/idBuBorrow"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_alignTop="@+id/idBuLend"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="2dp"
        app:srcCompat="@drawable/buborrow" />
</RelativeLayout>